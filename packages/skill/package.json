{
  "name": "@merriam-webster/skill",
  "version": "0.1.0",
  "description": "Claude Code skill for Merriam-Webster Dictionary",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "author": "cogell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cogell/merriam-webster.git",
    "directory": "packages/skill"
  },
  "dependencies": {
    "@merriam-webster/lib": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
